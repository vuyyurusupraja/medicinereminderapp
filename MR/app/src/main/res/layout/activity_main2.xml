<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#e0ffff">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"></include>
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/value123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="685dp"
            android:layout_marginRight="90dp"
            android:layout_toRightOf="@+id/progressBar1"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="600dp"
        tools:layout_editor_absoluteY="69dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/f"
            android:text="Medicine name"
            android:textColor="#0147AB"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/mn"
            android:layout_width="187dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/f"
            android:textSize="20dp"></EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/f"
            android:text="Medicine days"
            android:textColor="#0147AB"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView2"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Everyday"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Sun"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Mon"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Tue"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Wed"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Thu"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Fri"
                    android:textSize="18dp"></CheckBox>

                <CheckBox
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f"
                    android:text="Sat"
                    android:textSize="18dp"></CheckBox>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextTime"
            android:layout_marginStart="9dp"
            android:text="Time"
            android:textColor="#0147AB" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="152dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView11"
            android:layout_marginStart="9dp"
            android:ems="10"
            android:hint="@string/dhint"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="220dp"
            android:text="Date"
            android:textColor="#0147AB"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="140dp"
            android:text="Dosage"
            android:textColor="#0147AB" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="170dp"
            android:ems="10"
            android:hint="@string/dhint"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="162dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="90dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bk"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="560dp"
            android:background="@drawable/color_button"
            android:text="BACK"></Button>

        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="560dp"
            android:background="@drawable/color_button"
            android:text="Submit"></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>